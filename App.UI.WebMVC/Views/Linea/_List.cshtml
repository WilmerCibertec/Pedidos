@model IEnumerable<App.Pedidos.Models.WH_ClaseLinea>

<div class="table-responsive">
    <table id="lineaTable" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DescripcionLocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescripcionLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <a href="#" onclick="appPedidos.getModal('@Url.Action("Edit", new { id = item.Id })');" data-toggle="modal"
                           data-target="#modal-container" class="btn btn-warning">
                            <span class="fa fa-edit"></span> Editar
                        </a>
                        <a href="#" onclick="appPedidos.getModal('@Url.Action("Details", new { id = item.Id })');" data-toggle="modal"
                           data-target="#modal-container" class="btn btn-primary">
                            <span class="fa fa-search"></span> Ver
                        </a>
                        <a href="#" onclick="appPedidos.getModal('@Url.Action("Delete", new { id = item.Id })');" data-toggle="modal"
                           data-target="#modal-container" class="btn btn-danger">
                            <span class="fa fa-trash"></span> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DescripcionLocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </tfoot>
    </table>
</div>
